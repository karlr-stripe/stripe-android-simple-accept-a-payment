<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StripePaymentIntegration" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StripePaymentIntegration.CardInputStyle" parent="Theme.StripePaymentIntegration">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:textColorHint">@color/orange_500</item>
    </style>


    <style name="Theme.StripePaymentIntegration.StyleWithFont" parent="Theme.StripePaymentIntegration">
        <!--        https://stackoverflow.com/a/27588966/9769731-->
        <item name="android:fontFamily">@font/montserrat_regular</item>
<!--        <item name="android:letterSpacing">0.2</item>-->
    </style>

    <color name="orange_500">#FF9800</color>
    <color name="edittext_grey">#999999</color>
    <color name="text_light">#FCFCFC</color>
    <dimen name="size_12">12dp</dimen>
    <dimen name="font_14">14dp</dimen>
</resources>